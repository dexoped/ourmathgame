<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Dashboard</title>
</head>
<body style="background: linear-gradient(162deg,#8FF277 37%, #05F9DC 100%); height: 110vh;" >
    <div class="h-15 border-8 border-green-300 bg-green-300" style="height: 80px;">
        <h1 class="text-4xl font-bold text-center pt-3"> Our Math Game</h1>
    </div>
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold">Welcome, <%= username %>!</h1>
    </div>

    <div class="container mx-auto p-4">
        <div class="grid grid-cols-3 gap-4">
            <!-- Average Accuracy -->
            <div class="bg-blue-500 p-4 rounded-lg">
                <h2 class="text-2xl">Average Accuracy</h2>
                <p class="text-4xl"><%= averageAccuracy %>%</p>
                <p class="text-lg">+<%= accuracyChange %> month over month</p>
            </div>

            <!-- Average Speed -->
            <div class="bg-blue-500 p-4 rounded-lg">
                <h2 class="text-2xl">Average Speed</h2>
                <p class="text-4xl"><%= averageSpeed %> seconds</p>
                <p class="text-lg">-<%= speedChange %> month over month</p>
            </div>

            <!-- Times Played -->
            <div class="bg-blue-500 p-4 rounded-lg">
                <h2 class="text-2xl">Times Played</h2>
                <p class="text-4xl"><%= timesPlayed %>+</p>
            </div>
        </div>

        <div class="mt-8 grid grid-cols-2 gap-4">
            <!-- Record Table -->
            <div class="bg-blue-500 p-4 rounded-lg">
                <h2 class="text-2xl">Record</h2>
                <table class="w-full">
                    <thead>
                        <tr>
                            <th class="text-left">GAME NUMBER</th>
                            <th class="text-left">ACCURACY</th>
                            <th class="text-left">SPEED</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% records.forEach((record, index) => { %>
                        <tr>
                            <td><%= timesPlayed - index %></td>
                            <td><%= record.accuracy %>%</td>
                            <td><%= record.speed %>s</td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="flex justify-center mx-11 p-5">
            <button class="dashboard-button bg-green-500 text-white py-3 px-6 rounded-lg text-xl mb-8 mx-11"
                onclick="window.location.href='/selection'">New Game</button>
        </div>
    </div>
</body>
</html>
