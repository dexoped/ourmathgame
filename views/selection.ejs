<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Math Game</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body style="background: linear-gradient(162deg,#8FF277 37%, #05F9DC 100%); height: 110vh;">
    <div class="h-15 border-8 border-green-300 bg-green-300 flex items-center justify-center" style="height: 80px;">
        <div class="absolute left-4">
          <button onclick="window.history.back()"
            class="bg-yellow-300 hover:bg-yellow-400 text-black font-bold py-2 px-4 rounded-full text-3xl w-16 h-16 flex items-center justify-center">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
        </div>
        <h1 class="text-4xl font-bold">Our Math Game</h1>
      </div>
  <div class="container mx-auto p-4 text-center rounded-lg ">
    <div class="flex justify-between items-center  p-10">
      <div class="mr-16 p-5">
        <h2 class="text-2xl mb-4">Select Operator</h2>
        <button id="operator-plus" class="operator-button w-24 h-24 text-4xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectOperator('+')">+</button><br>
        <button id="operator-minus" class="operator-button w-24 h-24 text-4xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectOperator('-')">-</button><br>
        <button id="operator-multiply" class="operator-button w-24 h-24 text-4xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectOperator('*')">ร</button><br>
        <button id="operator-divide" class="operator-button w-24 h-24 text-4xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectOperator('/')">รท</button><br>
      </div><br>
      <div class="ml-16 p-5">
        <h2 class="text-2xl mb-4">Select Difficulty</h2>
        <button id="difficulty-easy" class="difficulty-button w-32 h-24 text-2xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectDifficulty('easy')">Easy</button><br>
        <button id="difficulty-medium"
          class="difficulty-button w-32 h-24 text-2xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectDifficulty('medium')">Medium</button><br>
        <button id="difficulty-hard" class="difficulty-button w-32 h-24 text-2xl bg-blue-500 text-white rounded-full m-2"
          onclick="selectDifficulty('hard')">Hard</button><br><br><br><br><br><br>
      </div>
    </div>
    <div class="flex justify-center">
      <button id="begin-button" class="begin-button text-white py-3 px-6 rounded-lg text-xl"
        style="display: none; background-color: #0400CB;" onclick="beginGame()">Begin</button>
    </div>
  </div>

  <script>
    let selectedOperator = '';
    let selectedDifficulty = '';

    function selectOperator(operator) {
      selectedOperator = operator;
      document.querySelectorAll('.operator-button').forEach(button => {
        button.classList.remove('bg-blue-700');
        button.classList.add('bg-blue-500');
      });
      document.getElementById(`operator-${operator === '+' ? 'plus' : operator === '-' ? 'minus' : operator === '*' ? 'multiply' : 'divide'}`).classList.remove('bg-blue-500');
      document.getElementById(`operator-${operator === '+' ? 'plus' : operator === '-' ? 'minus' : operator === '*' ? 'multiply' : 'divide'}`).classList.add('bg-blue-700');
      checkSelections();
    }

    function selectDifficulty(difficulty) {
      selectedDifficulty = difficulty;
      document.querySelectorAll('.difficulty-button').forEach(button => {
        button.classList.remove('bg-blue-700');
        button.classList.add('bg-blue-500');
      });
      document.getElementById(`difficulty-${difficulty}`).classList.remove('bg-blue-500');
      document.getElementById(`difficulty-${difficulty}`).classList.add('bg-blue-700');
      checkSelections();
    }

    function checkSelections() {
      if (selectedOperator && selectedDifficulty) {
        document.getElementById('begin-button').style.display = 'block';
      }
    }

    function beginGame() {
      console.log(`Redirecting to /game with operator=${selectedOperator} and difficulty=${selectedDifficulty}`);
      window.location.href = `/game?operator=${encodeURIComponent(selectedOperator)}&difficulty=${encodeURIComponent(selectedDifficulty)}`;
    }
  </script>
</body>

</html>
